<Window x:Class="Installer_Script_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Installer_Script_Generator"
        mc:Ignorable="d"
        Title="Installer Script Generator" Height="450" Width="800">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Label Content="Folder: " Margin="2" Padding="2" Height="24"/>
        <Label x:Name="pathLabel" Grid.Column="1" d:Content="Path" Margin="2" Padding="2" Height="24" AllowDrop="True" Drop="DropFolder" BorderBrush="#FF157DD3" BorderThickness="1"/>
        <Button Grid.Column="2" Content="Browse" Margin="2" Padding="2" Width="60" Height="24" Click="BrowseToReleaseClick"/>

        <Label Grid.Row="1" Content="Version: " Padding="2" Margin="2" Height="24"/>
        <TextBox x:Name="versionTxt" Grid.Row="1" Grid.Column="1" Width="100" Text="1.0.0" Padding="2" Margin="2" HorizontalAlignment="Left" Height="24" />

        <Label Grid.Row="2" Content="Extension: " Padding="2" Margin="2" Height="24"/>
        <TextBox x:Name="extensionTxt" Grid.Row="2" Grid.Column="1" Width="100" Padding="2" Margin="2" HorizontalAlignment="Left" Height="24" />

        <Label Grid.Row="3" Content="File Type: " Padding="2" Margin="2" Height="24"/>
        <TextBox x:Name="fileTypeTxt" Grid.Row="3" Grid.Column="1" Width="100" Padding="2" Margin="2" HorizontalAlignment="Left" Height="24" />

        <Button Grid.Row="5" Grid.ColumnSpan="3" Width="60" Content="Save" Margin="2" Padding="2" Height="24" Click="SaveScriptClick"/>
    </Grid>
</Window>
